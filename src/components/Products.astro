  <style>
.product-cards-container {
  display: flex;
  flex-wrap: wrap;
  gap: 2rem;

  max-width: 1200px;
  margin: 2rem auto;
}

.product-card {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  position: relative;
  flex-basis: calc(25% - 1.5rem);
  height: 20rem;
  overflow: hidden;

  &.red {
    background: #de3163;
  }

  &.yellow {
    background: #dfff00;
  }

  &.light-orange {
    background: #ffbf00;
  }

  &.orange {
    background: #ff7f50;
  }

  &.green {
    background: #9fe2bf;
  }

  &.blue {
    background: #6495ed;
  }

  &.purple {
    background: #ccccff;
  }

  .product-card__product {
    width: 50%;
    padding: 1rem;
    display: block;
    position: relative;
    z-index: 3;
    transition: 0.7s all cubic-bezier(0.25, 0.5, 0.39, 1.45);
  }

  .product-card__fruit {
    display: block;
    position: absolute;
    width: 60%;
    transition: 0.25s all cubic-bezier(0.25, 0.5, 0.39, 1.25);
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) scale(0.25);
    z-index: 2;

    img {
      width: 100%;
    }
  }

  &:hover {
    .product-card__product {
      transform: scale(1.2);
    }

    .product-card__fruit {
      opacity: 1;
    }

    &:nth-of-type(6n + 1) {
      box-shadow: inset 0 0 0 1rem yellow;

      .product-card__fruit {
        &:first-of-type {
          top: 65%;
          left: 40%;
          transform: rotate(25deg) scale(1);
          z-index: 4;
        }

        &:nth-of-type(2) {
          top: -10%;
          left: -20%;
          transform: rotate(-45deg) scale(1);
        }

        &:nth-of-type(3) {
          top: 45%;
          left: -10%;
          transform: rotate(10deg) scale(1);
        }
      }
    }

    &:nth-of-type(6n + 2) {
       box-shadow: inset 0 0 0 1rem green;

      .product-card__fruit {
        &:first-of-type {
          top: -15%;
          left: 50%;
          transform: rotate(-15deg) scale(1);
        }

        &:nth-of-type(2) {
          top: 75%;
          left: -10%;
          transform: rotate(33deg) scale(1);
          z-index: 4;
        }

        &:nth-of-type(3) {
          top: 45%;
          left: 70%;
          transform: rotate(-60deg) scale(1);
        }
      }
    }

    &:nth-of-type(6n + 3) {
       box-shadow: inset 0 0 0 1rem pink;

      .product-card__fruit {
        &:first-of-type {
          top: 15%;
          left: -30%;
          transform: rotate(50deg) scale(1);
        }

        &:nth-of-type(2) {
          top: 75%;
          left: -10%;
          transform: rotate(-33deg) scale(1);
        }

        &:nth-of-type(3) {
          top: 33%;
          left: 60%;
          transform: rotate(20deg) scale(1);
          z-index: 4;
        }
      }
    }

    &:nth-of-type(6n + 4) {
       box-shadow: inset 0 0 0 1rem orange;

      .product-card__fruit {
        &:first-of-type {
          top: 5%;
          left: 60%;
          transform: rotate(-10deg) scale(1);
          z-index: 4;
        }

        &:nth-of-type(2) {
          top: 80%;
          left: -10%;
          transform: rotate(33deg) scale(1);
        }

        &:nth-of-type(3) {
          top: 10%;
          left: -30%;
          transform: rotate(-33deg) scale(1);
        }
      }
    }

    &:nth-of-type(6n + 5) {
       box-shadow: inset 0 0 0 1rem purple;
      .product-card__fruit {
        &:first-of-type {
          top: -15%;
          left: 55%;
          transform: rotate(35deg) scale(1);
        }

        &:nth-of-type(2) {
          top: 70%;
          left: 65%;
          transform: rotate(15deg) scale(1);
        }

        &:nth-of-type(3) {
          top: 25%;
          left: -15%;
          transform: rotate(-20deg) scale(1);
          z-index: 4;
        }
      }
    }

    &:nth-of-type(6n + 6) {
       box-shadow: inset 0 0 0 1rem purple;
      .product-card__fruit {
        &:first-of-type {
          top: 50%;
          left: -30%;
          transform: rotate(-25deg) scale(1);
          z-index: 4;
        }

        &:nth-of-type(2) {
          top: 66%;
          left: 60%;
          transform: rotate(25deg) scale(1);
        }

        &:nth-of-type(3) {
          top: 15%;
          left: 60%;
          transform: rotate(50deg) scale(1);
        }
      }
    }
  }
}

.product-card--wide {
  flex-basis: calc(50% - 1rem);

  .product-card__product {
    width: auto;
    height: 65%;
  }
}

.bubble {
  /*   background: rgba(255, 255, 255, 0.5); */
  background-image: url("https://www.transparentpng.com/thumb/bubble/tT2okw-ribbon-balloon-accessories-seasonal-balloon-drops-party.png");
  background-blend-mode: screen;
  background-size: cover;
  background-repeat: no-repeat;
  border-radius: 50%;
  opacity: 0.75rem;

  position: absolute;
  top: 100%;

  animation-iteration-count: once;
  animation-duration: 3s;
}

@keyframes bubbleHeader1 {
  0% {
    top: 100%;
    transform: translateX(0) scale(0.5);
    filter: blur(0.5rem);
  }
  50% {
    transform: translateX(5vw) scale(1);
    filter: blur(0);
  }
  100% {
    top: -10%;
    transform: translateX(-2vw) scale(1);
  }
}
@keyframes bubbleHeader2 {
  0% {
    top: 100%;
    transform: translateX(-2vw) scale(1);
    filter: blur(0.5rem);
  }
  33% {
    top: 100%;
    transform: translateX(2vw) scale(1);
    filter: blur(0);
  }
  66% {
    transform: translateX(0vw) scale(0.5);
  }
  100% {
    top: -10%;
    transform: translateX(0) scale(0.25);
    filter: blur(2px);
  }
}
@keyframes bubbleHeader3 {
  0% {
    top: 100%;
    transform: translateX(6vw) scale(0.25);
    filter: blur(0.25rem);
  }
  33% {
    top: 100%;
    transform: translateX(3vw) scale(0.5);
    filter: blur(0);
  }
  66% {
    transform: translateX(-1vw) scale(1);
  }
  100% {
    top: -10%;
    transform: translateX(3vw) scale(1.25);
    filter: blur(0.5rem);
  }
}
@keyframes bubbleHeader4 {
  0% {
    top: 100%;
    transform: translateX(-4vw) scale(1);
    filter: blur(0.5rem);
  }
  50% {
    transform: translateX(2vw) scale(0.75);
  }
  100% {
    top: -10%;
    transform: translateX(-2vw) scale(0.5);
    filter: blur(0);
  }
}

/* Pause/remove animation when reduced-motion is set */
@media (prefers-reduced-motion: reduce) {
  .product-card {
    &:hover {
      .product-card__fruit {
        opacity: 1;
      }
    }
    .product-card__fruit {
      transition: 0.25s opacity cubic-bezier(0.25, 0.5, 0.39, 1.45);
    }
    .bubble {
      animation-play-state: paused !important;
    }
  }
}

