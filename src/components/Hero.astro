---
import RepetedSection from "./RepetedSection.astro";
---
<RepetedSection>
    <div class="relative min-h-[500px] w-full overflow-hidden bg-gradient-to-br">
      {/* Background overlay with juice image */}
      <div 
        class="absolute inset-0 bg-cover bg-center bg-no-repeat opacity-40 mix-blend-overlay"
      />
      
      {/* Content container */}
      <div class="relative z-10 flex min-h-[500px] w-full items-center px-6 py-20 sm:px-12 md:px-16 lg:px-20">
        <div class="mx-auto max-w-7xl">
          <div class="flex flex-col items-start gap-6 sm:gap-8">
            {/* Main heading with improved typography */}
            <h1 class="font-serif text-4xl font-bold tracking-tight text-white sm:text-5xl md:text-6xl lg:text-7xl">
             JJ Jugos de <span class="text-orange-400">calidad</span>
            </h1>
            
            {/* Subheading with better contrast and spacing */}
            <p class="max-w-2xl text-lg font-medium text-white/90 sm:text-xl md:text-2xl">
              Calidez y frescura en cada sorbo
            </p>
            
            {/* Call to action button */}
            <div  class="mt-4">
              <a href="#calidad" class="rounded-full bg-white px-8 py-3 font-medium text-orange-600 shadow-lg transition-all hover:bg-orange-50 hover:shadow-xl">
                Descubrir m√°s
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
</RepetedSection>