---
interface Props{
    title?:string;
    href?:string;
    isblank?:boolean;
    type?:string;
}

const {title='Enviar mensaje',href="/Contacto",isblank,type} = Astro.props;
---
{
    type==="submit"?
    <button id="sub" type="submit" class="w-full sm:w-[250px] bg-blue-900 h-[50px] my-3 flex items-center justify-center rounded-xl cursor-pointer relative overflow-hidden transition-all duration-500 ease-in-out shadow-md hover:scale-105 hover:shadow-lg before:absolute before:top-0 before:-left-full before:w-full before:h-full before:bg-gradient-to-r before:from-[#00319b] before:to-[rgb(78,105,228)] before:transition-all before:duration-500 before:ease-in-out before:z-[-1] before:rounded-xl hover:before:left-0 text-[#fff]">
        {title}    
    </button>:
    <a 
href={href}
target={isblank?"_blank":""}
class="w-full sm:w-[250px] bg-blue-900 h-[50px] my-3 flex items-center justify-center rounded-xl cursor-pointer relative overflow-hidden transition-all duration-500 ease-in-out shadow-md hover:scale-105 hover:shadow-lg before:absolute before:top-0 before:-left-full before:w-full before:h-full before:bg-gradient-to-r before:from-[#00319b] before:to-[rgb(78,105,228)] before:transition-all before:duration-500 before:ease-in-out before:z-[-1] before:rounded-xl hover:before:left-0 text-[#fff]">
{title}
</a>
}