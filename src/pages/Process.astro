---
import Proceso from '../components/Proceso.astro';
import PasosProcess from '../components/PasosProcess.astro';
import Numero1 from '../components/Numero1.astro';

/* Declarar los pasos */
const pasos = [
  { nombre: 'HUERTAS', imagen: 'url1', texto: 'lorem', icono: Numero1 },
  { nombre: 'FOS', imagen: 'url2', texto: 's', icono: Numero1 },
];
---

<Proceso />
{pasos.map((r, index) => (
  <PasosProcess
    nombre={r.nombre}
    imagen={r.imagen}
    texto={r.texto}
    icono={r.icono}
    esPar={index % 2 === 0}
  />
))}