---
import Proceso from '../components/Proceso.astro';
import PasosProcess from '../components/PasosProcess.astro';
import Numero1 from '../components/Numero1.astro';
import Numero2 from '../components/Numero2.astro';
import Numero3 from '../components/Numero3.astro';
import Numero4 from '../components/Numero4.astro';
import Numero5 from '../components/Numero5.astro';

/* Declarar los pasos */
const pasos = [
  { nombre: 'HUERTAS', imagen: 'https://www.starjuice.com.mx/assets/images/proceso1.jpg', texto: 'Su cultivacion es en base a procedimientos y tecnicas de agricultura organica.', icono: Numero1 },
  { nombre: 'FRUTA ORGANICA', imagen: 'https://www.starjuice.com.mx/assets/images/proceso1.jpg', texto: 'Seleccion, inspeccion y pizca de fruta organica de nuestras huertas certificadas.', icono: Numero2 },
  { nombre: 'TRANSPORTE', imagen: 'https://www.starjuice.com.mx/assets/images/proceso3.jpg', texto: 'Contamos con vehiculos de uso exclusivo para transportar nuestra fruta organica.', icono: Numero3 },
  { nombre: 'QA INSPECCION', imagen: 'https://www.starjuice.com.mx/assets/images/proceso5.jpg', texto: 'El area de aseguramiento de calidad inspecciona la fruta organica para aprobacion.', icono: Numero4 },
  { nombre: 'RECEPCION', imagen: 'https://www.starjuice.com.mx/assets/images/proceso7.jpg', texto: 'Pesado y recepcion de fruta organica.', icono: Numero5 },
];
---

<Proceso />
{pasos.map((r, index) => (
  <PasosProcess
    nombre={r.nombre}
    imagen={r.imagen}
    texto={r.texto}
    icono={r.icono}
    esPar={index % 2 === 0}
  />
))}