---
import Proceso from '../components/Proceso.astro';
import PasosProcess from '../components/PasosProcess.astro';
import Numero1 from '../components/Numero1.astro';
import Numero2 from '../components/Numero2.astro';
import Numero3 from '../components/Numero3.astro';
import Numero4 from '../components/Numero4.astro';
import Numero5 from '../components/Numero5.astro';
import Layout from '../layouts/Layout.astro';

/* Declarar los pasos */
const pasos = [
  { nombre: 'HUERTAS', imagen: 'https://www.starjuice.com.mx/assets/images/proceso1.jpg', texto: 'Su cultivación es en base a procedimientos y técnicas de agricultura orgánica.', icono: Numero1 },
  { nombre: 'FRUTA ORGÁNICA', imagen: 'https://www.starjuice.com.mx/assets/images/proceso1.jpg', texto: 'Selección, inspección y pizca de fruta orgánica de nuestras huertas certificadas.', icono: Numero2 },
  { nombre: 'TRANSPORTE', imagen: 'https://www.starjuice.com.mx/assets/images/proceso3.jpg', texto: 'Contamos con vehículos de uso exclusivo para transportar nuestra fruta orgánica.', icono: Numero3 },
  { nombre: 'QA INSPECCIÓN', imagen: 'https://www.starjuice.com.mx/assets/images/proceso5.jpg', texto: 'El área de aseguramiento de calidad inspecciona la fruta orgánica para aprobación.', icono: Numero4 },
  { nombre: 'RECEPCIÓN', imagen: 'https://www.starjuice.com.mx/assets/images/proceso7.jpg', texto: 'Pesado y recepción de fruta orgánica.', icono: Numero5 },
];
---

<Layout title="JJUGOS">
  <Proceso />
  {pasos.map((r, index) => (
    <PasosProcess
      nombre={r.nombre}
      imagen={r.imagen}
      texto={r.texto}
      icono={r.icono}
      esPar={index % 2 === 0}
    />
))}
</Layout>