<script type="module" is:inline>
  import gsap from "../node_modules/gsap/index.js";
  import { ScrollTrigger } from "../node_modules/gsap/ScrollTrigger.js";
  import { Flip } from "../node_modules/gsap/Flip.js";

  gsap.registerPlugin(ScrollTrigger);
  gsap.registerPlugin(Flip);

  const preloaderBackground = document.querySelector(".preloader__background");

  const preloaderText = document.querySelector(".preloader__text");

  const master = gsap.timeline();

  const setInitialStates = () => {
    gsap.set(preloaderText, {
      yPercent: 100,
    });
  };

  master.add(setInitialStates());

  document.addEventListener("DOMContentLoaded", () => {
    gsap.from(".fade-in", {
      scrollTrigger: {
        trigger: ".fade-in",
        start: "top 80%", // Inicia la animaci칩n cuando el elemento est치 en el 80% de la ventana
        end: "bottom 20%", // Termina la animaci칩n cuando el elemento est치 en el 20% de la ventana
        toggleActions: "play none none none", // Reproduce la animaci칩n al entrar, no hace nada al salir
      },
      opacity: 0,
      y: 50,
      duration: 1,
    });
    // Entrada desde la izquierda
    gsap.from(".fade-in-left", {
      scrollTrigger: {
        trigger: ".fade-in-left",
        start: "top 80%",
        end: "bottom 20%",
        toggleActions: "play none none none",
      },
      opacity: 0,
      x: -100,
      duration: 1,
    });

    // Entrada desde la derecha
    gsap.from(".fade-in-right", {
      scrollTrigger: {
        trigger: ".fade-in-right",
        start: "top 80%",
        end: "bottom 20%",
        toggleActions: "play none none none",
      },
      opacity: 0,
      x: 100,
      duration: 1,
    });

    // Entrada desde arriba
    gsap.from(".fade-in-top", {
      scrollTrigger: {
        trigger: ".fade-in-top",
        start: "top 80%",
        end: "bottom 20%",
        toggleActions: "play none none none",
      },
      opacity: 0,
      y: -100,
      duration: 1,
    });

    // Entrada desde abajo
    gsap.from(".fade-in-bottom", {
      scrollTrigger: {
        trigger: ".fade-in-bottom",
        start: "top 80%",
        end: "bottom 20%",
        toggleActions: "play none none none",
      },
      opacity: 0,
      y: 100,
      duration: 1,
    });

    // Entrada con escala
    gsap.from(".fade-in-scale", {
      scrollTrigger: {
        trigger: ".fade-in-scale",
        start: "top 80%",
        end: "bottom 20%",
        toggleActions: "play none none none",
      },
      opacity: 0,
      scale: 0.8,
      duration: 1,
    });

    // Rotaci칩n desde la izquierda
    gsap.from(".rotate-in-left", {
      scrollTrigger: {
        trigger: ".rotate-in-left",
        start: "top 80%",
        end: "bottom 20%",
        toggleActions: "play none none none",
      },
      opacity: 0,
      x: -100,
      rotation: -45,
      duration: 1,
    });

    // Rotaci칩n desde la derecha
    gsap.from(".rotate-in-right", {
      scrollTrigger: {
        trigger: ".rotate-in-right",
        start: "top 80%",
        end: "bottom 20%",
        toggleActions: "play none none none",
      },
      opacity: 0,
      x: 100,
      rotation: 45,
      duration: 1,
    });

    // Rotaci칩n desde arriba
    gsap.from(".rotate-in-top", {
      scrollTrigger: {
        trigger: ".rotate-in-top",
        start: "top 80%",
        end: "bottom 20%",
        toggleActions: "play none none none",
      },
      opacity: 0,
      y: -100,
      rotation: -45,
      duration: 1,
    });

    // Rotaci칩n desde abajo
    gsap.from(".rotate-in-bottom", {
      scrollTrigger: {
        trigger: ".rotate-in-bottom",
        start: "top 80%",
        end: "bottom 20%",
        toggleActions: "play none none none",
      },
      opacity: 0,
      y: 100,
      rotation: 45,
      duration: 1,
    });

    // Entrada con rebote
    gsap.from(".bounce-in", {
      scrollTrigger: {
        trigger: ".bounce-in",
        start: "top 80%",
        end: "bottom 20%",
        toggleActions: "play none none none",
      },
      opacity: 0,
      y: 100,
      ease: "bounce.out",
      duration: 1,
    });
    // Entrada desde la izquierda con deslizamiento
    gsap.from(".slide-in-left", {
      scrollTrigger: {
        trigger: ".slide-in-left",
        start: "top 80%",
        end: "bottom 20%",
        toggleActions: "play none none none",
      },
      x: -100,
      duration: 1,
    });

    // Entrada desde la derecha con deslizamiento
    gsap.from(".slide-in-right", {
      scrollTrigger: {
        trigger: ".slide-in-right",
        start: "top 80%",
        end: "bottom 20%",
        toggleActions: "play none none none",
      },
      x: 100,
      duration: 1,
    });

    // Entrada desde arriba con deslizamiento
    gsap.from(".slide-in-top", {
      scrollTrigger: {
        trigger: ".slide-in-top",
        start: "top 80%",
        end: "bottom 20%",
        toggleActions: "play none none none",
      },
      y: -100,
      duration: 1,
    });

    // Entrada desde abajo con deslizamiento
    gsap.from(".slide-in-bottom", {
      scrollTrigger: {
        trigger: ".slide-in-bottom",
        start: "top 80%",
        end: "bottom 20%",
        toggleActions: "play none none none",
      },
      y: 100,
      duration: 1,
    });

    // Entrada con giro
    gsap.from(".spin-in", {
      scrollTrigger: {
        trigger: ".spin-in",
        start: "top 80%",
        end: "bottom 20%",
        toggleActions: "play none none none",
      },
      rotation: 360,
      duration: 1,
    });
  });
</script>
